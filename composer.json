{
    "name": "secretary/core",
    "description": "Secrets Manager for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Scherer",
            "email": "aequasi@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "ext-json":         "*",
        "psr/cache":        "^1.0",
        "psr/simple-cache": "^1.0",
        "symfony/options-resolver": "^4.2"
    },
    "require-dev": {
        "aws/aws-sdk-php": "^3.90",
        "phpunit/phpunit": "^8.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "suggest": {
        "aws/aws-sdk-php": "Needed for the AWS Adapters",
        "guzzlehttp/guzzle": "Needed for the Hashicorp Vault Adapter"
    },
    "autoload": {
        "psr-4": {
            "Secretary\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Secretary\\Tests\\": "tests/"
        }
    }
}
